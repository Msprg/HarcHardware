<?xml version="1.0" encoding="US-ASCII"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>sources</id>
    <formats>
        <!--format>tar.gz</format-->
        <!--format>tar.bz2</format-->
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory/>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>native/**</exclude>
                <exclude>repos/**</exclude>
                <exclude>package/dist/**</exclude>
                <exclude>package/repos/**</exclude>
                <exclude>package/dependency-reduced-pom.xml</exclude>
                <exclude>**/*.patch</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/*.git*</exclude>
                <exclude>**/test/**</exclude> <!-- Presently not ready -->
                <exclude>**/Crystal-Clear-Icons/**</exclude> <!-- at least presently -->
                <exclude>**/*~</exclude> <!-- just in case -->
                <exclude>**/*.o</exclude>
                <exclude>**/Makefile.in</exclude>
            </excludes>
            <lineEnding>keep</lineEnding> <!-- do not change! -->
        </fileSet>
    </fileSets>
</assembly>
